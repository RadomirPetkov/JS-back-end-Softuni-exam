<main>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Announcement</h1>
            <form method="POST">
                <label>Name:</label>
                <input type="text" id="name" name="text" value="{{name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{price}}">
                <label>Description:</label>
                <textarea name="description" id="description">{{description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="paymentMethod">
                    <option value="crypto-wallet" {{#if crypot-wallet}} selected {{/if}}>Crypto Wallet</option>
                    <option value="credit-card" {{#if credit-card}} selected {{/if}}>Credit Card</option>
                    <option value="debit-card" {{#if debit-card}} selected {{/if}}>Debit Card</option>
                    <option value="paypal" {{#if paypal}} selected {{/if}}>PayPal</option>
                </select>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>